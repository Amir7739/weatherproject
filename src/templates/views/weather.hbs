<html lang="en">

  <head>
    {{>links}}
  </head>

  <body>
    {{>navbar}}

    <!-- main-header -->
    <div class="container-fluid main_header">
      <div class="row">
        <div class="col-md-10 col-12 max-auto">
          <div class="row">
            <!-- left side div -->
            <div class="main-content">
                <form class="temp_form">
                    <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                    <input type="submit" value="search" id="submitBtn">
                </form>
            </div>
            
            <div class="tempInformation">
                <div class="top_layer">
                    <p id="day">Tuesday</p>
                    <p id="today_data">02 Jan</p>
                </div>

                <div class="main-layer">
                    <id id="city_name">Get Output</id>
                    <div class="middle_layer data_hide"></div>
                    <p id="temp"><span id="temp_real_value">0</span><sup>o</sup>C</p>
                    <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                </div>
            </div>
            </div>
          </div>
        </div>
      </div>

    <!-- footer -->
    
    {{>footer}}

    <script src="js/main.js"></script>

    <script>
      const getCurrentDay = () => {
        let weedays = new Array(7);
        weedays[0] = "Sunday";
        weedays[1] = "Monday";
        weedays[2] = "Tuesday";
        weedays[3] = "Wednesday";
        weedays[4] = "Thursday";
        weedays[5] = "Friday";
        weedays[6] = "Saturday";

        let currentTime = new Date()
        days = weedays[currentTime.getDay()]; // fetch single current day

        let day = document.getElementById("day"); 
        day.innerText = days
      }
      getCurrentDay();

      // get current date and month
      let currentDateAndMonth = () => {
        var months = [
        "Jan",
        "Feb",
        "March",
        "Apr",
        "May",
        "June",
        "July",
        "Aug",
        "Sept",
        "Oct",
        "Nov",
        "Dec"
        ]

        let currentDate = new Date()
        let month = months[currentDate.getMonth()]
        let date = currentDate.getDate();

        let today_data = document.getElementById("today_data")
        today_data.innerHTML = `${date} ${month}`;
      }
      currentDateAndMonth();
    </script>

  </body>

</html>